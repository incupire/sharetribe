= render :partial => "layouts/left_hand_navigation", :locals => { :links => about_links }

- content_for :title, "About Us | Avontage, Arizona | Small-Local Business Community"

- content_for :title_header do
  %h1= t("layouts.infos.info_about_kassi")

.left-navi-section.about-section
  = render :layout => "layouts/mercury_editable_page", :locals => { :content_type => "about_page_content" } do
    - if @community_customization && @community_customization.about_page_content
      - content = @community_customization.about_page_content.html_safe
    - else
      - content = render :partial => "default_about_page"

    - content_for :meta_description, "Avontage is a Scottsdale-based small local business community in Arizona.  Explore our marketing & advertising, beauty & spas, health & fitness, and many other services."
    - content_for :keywords, "Small local business community"

    - content
