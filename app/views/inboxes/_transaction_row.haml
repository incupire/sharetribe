.row-with-divider.without-margin.conversation-row

  .col-3
    .conversation-details-container
      - avatar = history.person.image.present? ? history.person.image.url(:thumb) : missing_avatar(:thumb)
      = link_to person_path(history.person) do
        = image_tag avatar, :class => "conversation-avatar"
      .conversation-details
        .conversation-other-party-name
          = link_to_unless history.person.deleted, PersonViewUtils.person_display_name(history.person, @current_community), person_path(history.person)
        .conversation-last-message-at
          = "#{time_ago_in_words(history.created_at)} ago"

  .col-3
    = t("conversations.avon_bucks_history.avon_bucks_adjusment_by_admin")
    .conversation-context

  .col-2
    - if history.operation.eql?("added")
      = "+ #{MoneyViewUtils.to_humanized(history.amount)} Avon"
    - else
      = "- #{MoneyViewUtils.to_humanized(history.amount)} Avon"

  .col-2
    - if history.operation.eql?("added")
      = t("conversations.avon_bucks_history.added")
    - else
      = t("conversations.avon_bucks_history.deducted")

  .col-2
    - if history.transaction_id.present?
      = link_to person_transaction_path(person_id: history.person_id, id: history.transaction_id) do
        %button{class: "get-started"}
          = t("conversations.avon_bucks_history.view_details")
    - else
      = link_to person_path(@current_user) do
        %button{class: "get-started"}
          = t("conversations.avon_bucks_history.view_details")        
