            </div>
          </div>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12 no_padding_default">
          <div class="listing_frame">
            <div class="image_frame">
              <%= image_tag 'Food_Drinks.png', class: '' %>
            </div>
            <div class="listing_details">
              <div class="category_heading">Food &<br>Drinks</div>
              <%= link_to '/s?category=food-and-drinks' do %>
                <%= button_tag 'Explore Now',class:'explore_button' %>
              <% end %>
              <div class="description">Wanna take the family out to a nice dinner? Be smart and trade for it.</div>
            </div>
          </div>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12 no_padding_default">
          <div class="listing_frame">
            <div class="image_frame">
              <%= image_tag 'EventsThingsToDo.png', class: '' %>
            </div>
            <div class="listing_details">
              <div class="category_heading">Events & <br>Things To Do</div>
              <%= link_to '/s?category=events-and-things-to-do' do %>
                <%= button_tag 'Explore Now',class:'explore_button' %>
              <% end %>
              <div class="description">Discover many fun experiences and events around town & save your cash</div>
            </div>
          </div>
        </div>
      </div>
      <div class="under_categories col-md-12 col-sm-12 col-xs-12">
        <%= link_to 'Explore many more services in the marketplace','javascript:void(0)' ,class:'more_services'%>
      </div>
