            </div>
          </div>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12 no_padding_default">
          <div class="listing_frame">
            <div class="image_frame">
              <%= image_tag 'BeautySpas.png', class: '' %>
            </div>
            <div class="listing_details">
              <div class="category_heading">Beauty & <br>Spas</div>
              <%= link_to '/s?category=beauty-and-spas' do %>
                <%= button_tag 'Explore Now',class:'explore_button' %>
              <% end %>
              <div class="description">Need skincare, massage, or a stylist? Pay for it with your services</div>
            </div>
          </div>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12 no_padding_default">
          <div class="listing_frame">
