  <div class="main_wrapper_second">
    <div class="col-md-12 col-sm-12 col-xs-12 no_padding_default main_frame_business">
      <h2 class="heading_market">BENEFITS</h2>
      <p class="below_heading_market">work & live like an owner!</p>
      <div class="col-md-4 col-sm-4 col-xs-12">
        <div class="listing_frame">
          <div class="listing_image">
            <%= image_tag 'EarnQualityLocalCustomers.png' ,class: 'earn_quality' %>
          </div>
          <div class="listing_description">
            <h2>Earn Quality Local Customers</h2>
            <p>Build loyalty and long-term relationships with like-minded business owners in your community</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-sm-4 col-xs-12">
        <div class="listing_frame">
          <div class="listing_image">
            <%= image_tag 'SaveYourCash.png' ,class: 'earn_quality' %>
          </div>
          <div class="listing_description">
            <h2>Save Your Cash </h2>
            <p>Discover many service offerings for your business or personal needs, delightful perks and experiences to trade with</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-sm-4 col-xs-12">
        <div class="listing_frame">
          <div class="listing_image">
            <%= image_tag 'GrowYourBusiness.png' ,class: 'earn_quality' %>
          </div>
          <div class="listing_description">
            <h2>Grow Your Business</h2>
            <p>Offer your excess capacity at your own schedule to fill up those slow times, and collaborate to earn high-quality clients</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="main_wrapper">
    <div class="sub_wrapper">
      <div class="col-md-7 col-sm-12 col-xs-12 no_padding_default">
        <div class="business_group">
          <%= image_tag 'business_group.png',class: 'business_image' %>
        </div>
      </div>
      <div class="col-md-5 col-sm-12 col-xs-12 no_padding_default">
        <div class="business_details">
          <h2>A MUST HAVE APP</h2>
          <p>We are creating a magical experience to connect local business owners, entrepreneurs, freelancers, influencers, makers, and doers to help grow your business</p>
          <%= link_to about_infos_path,class: 'anchor_web' do %>
            <%=  button_tag 'Read More',class:'read_more_tab'%>
          <% end %>  
        </div>
      </div>
    </div>
  </div>
  <div class="footer_bottom">
    <div class="footer_wrapper">
      <ul class="social_icons_list">
        <li><%= link_to 'https://www.instagram.com/avontage/',target:"_blank" do %><i class="fa fa-instagram social_icons" aria-hidden="true"></i><% end %></li>
        <li><%= link_to 'https://www.facebook.com/avontage/',target:"_blank" do %><i class="fa fa-facebook social_icons" aria-hidden="true"></i><% end %></li>
        <li><%= link_to 'https://www.linkedin.com/company/avontage/',target:"_blank" do %><i class="fa fa-linkedin social_icons" aria-hidden="true"></i><% end %></li>
        <li><%= link_to 'https://twitter.com/avontagebiz',target:"_blank" do %><i class="fa fa-twitter social_icons" aria-hidden="true"></i><% end %></li>
        <li><%= link_to 'https://www.pinterest.com/avontage/avontage/',target:"_blank" do %><i class="fa fa-pinterest-p social_icons" aria-hidden="true"></i><% end %></li>
        <li><%= link_to 'https://avontage.tumblr.com/',target:"_blank" do %><i class="fa fa-tumblr social_icons" aria-hidden="true"></i><% end %></li>
      </ul>
      <div class="footer_list col-md-12 col-sm-12 col-xs-12">
        <div class="col-md-2 col-sm-2 col-xs-12 no_padding_default extra_div"></div>
        <div class="col-md-2 col-sm-2 col-xs-12 mobile_center">
          <span>Get started</span>
          <%= link_to 'Create an account', sign_up_path %>
          <%= link_to 'Post your Offers', new_listing_path %>
          <%= link_to 'How-it-Works', how_to_use_infos_path %>
          <%= link_to 'Terms of service', terms_infos_path %>
        </div>
        <div class="col-md-2 col-sm-2 col-xs-12 extra_div mobile_center">
          <span>Learn more</span>
          <%= link_to 'Benefits', 'https://www.avontage.com/benefits',target:"_blank" %>
          <%= link_to 'FAQ','https://www.avontage.com/faq',target:"_blank" %>
          <%= link_to 'About Us',about_infos_path %>
          <%= link_to 'Blog','javascript:void(0)' %>
          <%= link_to 'Help','javascript:void(0)' %>
          <%= link_to 'Privacy policy',privacy_infos_path %>
        </div>
        <div class="col-md-5 col-sm-5 col-xs-12 mobile_center">
          <span>Top categories</span>
          <div class="col-md-6 col-sm-6 col-xs-12 top_categoris">
            <% unless @all_categories.blank? %>
              <% @all_categories.each_with_index do |category,index| %>
                <% if index < 12 %>
                  <%= link_to category.display_name(I18n.locale), search_path(category: category) %>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12 top_categoris">
            <% unless @all_categories.blank? %>
              <% @all_categories.each_with_index do |category,index| %>
                <% if index >= 12 %>
                  <%= link_to category.display_name(I18n.locale),search_path(category: category) %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <h1 class="copyright">14747 N. Northsight Blvd Scottsdale, AZ 85260 <br>415.944.9067</h1>
      <span class="color_15">©2018 by Avontage, LLC</span>  
    </div>
  </div>
</div>