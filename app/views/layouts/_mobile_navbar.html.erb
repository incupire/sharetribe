<div class="mobile_navbar_bottom">
	<div class="menus">
		<div class="icons">
			<%=link_to search_path, class: 'inner_icon' do %>
			  <%=image_tag 'home_2.png', alt: ''%>
				<!-- <img src="assets/home_2.png" alt=""> -->
				<span>Home</span>
			<%end%>
		</div>
		<div class="icons">
			<a href="#" class="inner_icon">
				<img src="assets/search.png" alt="">
				<span>Explore</span>
