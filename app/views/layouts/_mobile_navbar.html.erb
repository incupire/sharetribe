			</a>
		</div>
	</div>
</div>


<script type="text/javascript">
	<% content_for :javascript do %>
	$(document).ready(function(){
		$('.slide_menu').click(function(){
			if (!$('.mobile_view_slide_navbar').hasClass('add')) {
				$('.mobile_view_slide_navbar').addClass('add');
			}
			else{
				$('.mobile_view_slide_navbar').removeClass('add');
			}
		});
		$('.cross').click(function(){
			$('.mobile_view_slide_navbar').removeClass('add');
		})
	});
	<% end %>
</script>

















